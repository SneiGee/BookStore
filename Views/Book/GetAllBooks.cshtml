@model IEnumerable<BookModel>
@{
    ViewData["Title"] = "Book List";
}

<div class="container">
    <h5 class="display-4">All Book</h5>
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-4">
                <div class="card mb-4 shadow-sm">
                    <img src="@book.CoverImageUrl" class="img-thumbnail">
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <div class="card-text">@book.Description</div>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-action="getbook" asp-route-id="@book.Id" class="btn btn-sm btn-outline-secondary">View details</a>
                            </div>
                            <small class="text-muted">@book.Author</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>